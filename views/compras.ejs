<!DOCTYPE html>
<html lang="en">

<%- include('partials/header.ejs') %>
<body>

    <h3>Mis Compras</h3>

    <main class="registercompras">
        <div class="container-miscompras">
            <form action="/" method="POST">
                <input class="textInput" type="text" name="name" placeholder="Nombre y apellido">
                <input class="textInput" type="text" name="user" placeholder="Nombre de usuario">
                <input class="textInput" type="email" name="email" placeholder="E-mail">
                <input class="textInput" type="password" name="contraseña" placeholder="Contraseña">
                <input class="textInput" type="text" name="addres" placeholder="Domicilio"><br>
                <div class="medios">
                    <h4>Medios de pago</h4>
                    <div class="profile">
                        <div>
                            <input type="radio" id="efectivo" name="Pago" value="efectivo">
                            <label for="efectivo"> Efectivo</label>
                        </div>
                        <div>
                            <input type="radio" id="mercadoPago" name="pago" value="Mercado Pago">
                            <label for="mercadopago"> Mercado Pago</label>
                        </div>
                    </div>
                </div> <br><br>
                <div class="botonera">
                    <input type="submit" value="Confirmar">
                    <input type="reset" value="Borrar">
                </div>
            </form>
        </div>
        <div></div>

        <div></div>

        <div></div>

    </main>
</body>
<%- include('partials/footer.ejs') %>


</html>