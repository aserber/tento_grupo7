<!DOCTYPE html>
<html lang="en">


<%- include('../partials/head.ejs') %>
    <%- include('../partials/header.ejs') %>

        <body class="prod">


            <h3>Registro</h3>
            <style>
                h3 {
                    font-size: 45px;
                    font-family: "Monserrat";
                    color: white;
                    text-decoration: underline solid 2px white;
                }
            </style>
                        <% if (locals.errors && errors.datosMal){%>
                            <span class="text-danger">
                                <%= errors.datosMal.msg %>
                            </span>
                            <%}%>
                        

                            <h1 class="moviesAddTitulo"></h1>

            <main class="register">
                <div class="container-registro">

                    <section id="formulario">
                        <article class="mostrarFormulario">
                            <ul class="errores"></ul>
                    <form action="./registro" method="POST" class="form" enctype="multipart/form-data">
                        
                        <input type="text" name="name" placeholder="Nombre" id="name" value="<%= typeof old != 'undefined' ? old.first_name : '' %>">
                        <input type="text" name="last_name" placeholder="Apellido" id="last_name" value="<%= typeof old != 'undefined' ? old.last_name : '' %>">
                        <input type="text" name="email" placeholder="E-mail" id="email">
                        <input type="password" name="password" placeholder="Contraseña" id="password" >
                        <input type="file"   name="avatar"  id="file" placeholder="Debes eligir tu imagen...">
                        <div class="botonera">
                            <input type="submit" value="Enviar">
                            <input type="reset" value="Borrar">
                        </div>
                        <div class="text-center my-3">Ya tengo una cuenta? <a href="./login">Inicia sesión</a></div>
                    </form>
                    </article>
                </section>

                </div>
                <br>
                <script src="/js/registro.js"></script>
                <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            </main>
        </body>

        <%- include('../partials/footer.ejs') %>

</html>