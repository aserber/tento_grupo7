<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>
    <%- include('../partials/header.ejs') %>

        <body class="prod">

            <section id="formulario">
                <article class="mostrarFormulario">
                    <ul class="errores"></ul>


            <form action="/usuario/profile/<%= userToEdit.id %>?_method=PATCH" method="POST" enctype="multipart/form-data" id= "form" class="form">
            <div class="card" style="width: 40%">
                <img src="/images/usuariosimg/<%= userToEdit.avatar %> " class="card-img-top" alt="product image">
                <input type="hidden"  name="oldImagen"  value="<%= userToEdit.avatar%>">
                <br><input type="file" name="avatar" id="avatar">

                <div class="col-12 col-md-6">
                    <label for="name" class="form-label">Nombre del Usuario:</label>
                    <input type="text" id="name" name="name" placeholder="Nombre" value="<%= userToEdit.name%>"  class="form-input">
                </div>
                <div class="col-12 col-md-6">
                    <label for="name" class="form-label">Apellido del Usuario:</label>
                    <input type="text" id="last_name" name="last_name" placeholder="Nombre" value="<%= userToEdit.last_name%>"  class="form-input">
                </div>
                <p class="card-text"><%= userToEdit.email %></p>
                
                <div class="card-body">


                    <% if (locals.errors && errors.name) { %>
                        <p style="color: red;"><%= errors.name.msg %></p>
                    <% } %>
      
                <button type="submit" class="buy-now-button">Guardar usuario</button>
                <a href="/usuario/profile" class="action-button edit">Volver</a>
                </div>
            </div>
        </form>
        </article>
        </section>
        <script src="/js/editUser.js"></script>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    </main>
        </body>
<%- include('../partials/footer.ejs') %>
</html>            


