<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Editando: ' + '¿?'}) %>
<body class = "prod">
	<!-- Header -->
	<%- include('../partials/header') %>
	<!-- /Header -->


	<section id="formulario"> 
		<article class="mostrarFormulario">
	<ul class="errores"></ul>


	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= productToEdit.name %></i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/admin/detail/<%= productToEdit.id %>" method="POST" enctype="multipart/form-data" class="form">
				<div class="row product-detail">

					<div>
						<img src="/images/products/<%= productToEdit.image %>" alt="product image" class="product-detail-img">
						<input type="hidden"  name="oldImagen" id="oldImagen" value="<%= productToEdit.image%>">
						<input type="file" name="image" id="image" >
						</div>
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Chocolate" value="<%= productToEdit.name%>"  class="form-input">
						<% if (locals.errors && errors.name) { %>
							<p style="color: red;"><%= errors.name.msg %></p>
						<% } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="number" id="price" name="price" placeholder="Ej: 5678" value="<%= productToEdit.price%>" class="form-input">
						<% if (locals.errors && errors.price) { %>
							<p style="color: red;"><%= errors.price.msg %></p>
						<% } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="number" id="discount" name="discount" placeholder="Ej: 15" value="<%= productToEdit.discount%>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="" disabled>Elegí</option>
							<% prodCate.forEach(prodCate => { %>
								<option value="<%= prodCate.id %>"><%= prodCate.name %></option>
								<% }); %>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= productToEdit.description %></textarea>
						<% if (locals.errors && errors.description) { %>
							<p style="color: red;"><%= errors.description.msg %></p>
						<% } %>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
						<a href="/admin/administrar" class="btn btn-danger">Volver</a>
					</div>
				</div>
			</form>
		</div>

	</div>
	</section>
</article>
	 <!-- script src="/js/editProduct.js"></script>
	script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script> -->
	<!-- footer -->
	<%- include('../partials/footer.ejs') %>
	<!-- /footer -->
</body>	
</html>