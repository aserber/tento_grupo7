<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Inicio'}) %>
<body class= "prod">
	<!-- Header -->
	<%- include('../partials/header') %>
	<!-- /Header -->

	<!-- ultima visita -->
    <div>
        <a href="/admin/crear" class="action-button edit">CREAR PRODUCTO</a>
    </div>
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">PASTELERIA</h2>
			</div>
			<!-- Show the "visited" products -->	
			<% Pasteleria.forEach(function(product){ 
				let finalPrice = (product.price * ((100 - product.discount) / 100)).toFixed(0)
			%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						
							<figure class="product-box_image">
								<img class= "img2" src="/images/products/<%= product.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2><%= toThousand(finalPrice) %></h2>
								<span><%= product.discount %> %OFF</span>
								<p><%= product.name %></p>
                                <a href="edit/<%= product.id %>" class="action-button edit">EDITAR PRODUCTO</a>
                                <form action="delete/<%= product.id %>?_method=DELETE" method="POST" style="display: inline-flex">
                                    <button type="submit" class="action-button delete">ELIMINAR</button>
                                </form>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
			</div>
		</div>
		<!-- /ultima visita -->

		
		<!-- Ofertas -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">CHOCOLATE</h2>
				</div>
				<!-- Show the "in-sale" products -->
				<% Chocolate.forEach(function(product){ 
					let finalPrice = (product.price * ((100 - product.discount) / 100)).toFixed(0)
				%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							
								<figure class="product-box_image">
									<img class= "img2" src="/images/products/<%= product.image %>" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2><%= toThousand(finalPrice) %></h2>
									<span><%= product.discount %> %OFF</span>
									<p><%= product.name %></p>
                                    <a href="edit/<%= product.id %>" class="action-button edit">EDITAR PRODUCTO</a>
                                    <form action="delete/<%= product.id %>?_method=DELETE" method="POST" style="display: inline-flex">
                                        <button type="submit" class="action-button delete">ELIMINAR</button>
                                    </form>
									
								</article>
							</a>
                            
						
						</section>
					</div>
				<% }) %>
				</div>
			</div>


			<!-- /Ofertas -->
			
			<!-- footer -->
			<%- include('../partials/footer.ejs') %>
			<!-- /footer -->
		</body>	
		</html>